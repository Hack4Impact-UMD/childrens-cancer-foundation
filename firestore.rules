rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.role == 'admin';
    }
    
    // Helper function to check if user is an applicant
    function isApplicant() {
      return request.auth != null && 
        request.auth.token.role == 'applicant';
    }
    
    // Helper function to check if user is a reviewer
    function isReviewer() {
      return request.auth != null && 
        request.auth.token.role == 'reviewer';
    }
    
    // Applications collection rules
    match /applications/{applicationId} {
      allow read: if isAdmin() || isReviewer() || (isApplicant() && request.auth.uid == resource.data.creatorId);
      allow write: if isAdmin();
    }
    
    // FAQs collection rules
    match /FAQs/{faqId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Applicants
    match /applicants/{applicantId} {
      allow read, write: if isAdmin() || isReviewer() || request.auth.uid == applicantId;
    }
    
    // Reviewers
    match /reviewers/{reviewerId} {
      allow read, write: if isAdmin() || isReviewer();
    }
    
    // Application Cycles
    match /applicationCycles/{cycleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Decision Data
    match /decision-data/{decisionId} {
      allow read: if isAdmin() || isReviewer() || (isApplicant() && request.auth.uid == get(/databases/$(database)/documents/applications/$(resource.data.applicationId)).data.creatorId);
      allow write: if isAdmin();
    }
    
    // Post Grant Reports collection rules
    match /post-grant-reports/{reportId} {
      // Allow applicants to create their own reports
      allow create: if isApplicant() && 
        request.resource.data.userId == request.auth.uid;
      
      // Allow applicants to read their own reports
      allow read: if isApplicant() && 
        resource.data.userId == request.auth.uid;
      
      // Allow applicants to update their own reports
      allow update: if isApplicant() && 
        resource.data.userId == request.auth.uid;
      
      // Allow admins to read and update all reports
      allow read, update: if isAdmin();
    }
    
    // Reviewer Whitelist
    match /reviewer-whitelist/{whitelistId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Reviews
    match /reviews/{reviewId} {
      allow read, write: if isAdmin() || isReviewer();
    }
    
    // Reviewer subcollection
    match /reviews/{reviewId}/reviewers/{reviewreviewerId} {
      allow read, write: if isAdmin() || isReviewer();
    }
  }
}